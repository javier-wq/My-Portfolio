---
import { Icon } from "astro-icon/components";

const navItems = [
  { href: '/', label: 'Home', icon: 'home' },
  { href: '/projects', label: 'Projects', icon: 'folder-multiple' },
  { href: '/certifications', label: 'Certifications', icon: 'certificate' }
];
---
<nav class="fixed top-0 left-0 right-0 bg-gray-900/95 backdrop-blur-sm z-50 border-b border-gray-800">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <a href="/" class="text-xl font-bold text-white flex items-center gap-2">
        <Icon name="code-braces" class="w-6 h-6" />
        Portfolio
      </a>
      
      <div class="hidden md:flex space-x-8">
        {navItems.map(item => (
          <a 
            href={item.href}
            class="text-gray-300 hover:text-white transition-colors flex items-center gap-2"
          >
            <Icon name={item.icon} class="w-5 h-5" />
            {item.label}
          </a>
        ))}
      </div>

      <button 
        id="mobileMenuButton"
        class="md:hidden text-gray-300 hover:text-white"
        aria-label="Menu"
      >
        <Icon name="menu" class="w-6 h-6" />
      </button>
    </div>
  </div>

  <!-- Mobile menu -->
  <div id="mobileMenu" class="hidden md:hidden bg-gray-900 border-b border-gray-800">
    <div class="container mx-auto px-4 py-4">
      {navItems.map(item => (
        <a 
          href={item.href}
          class="block py-2 text-gray-300 hover:text-white transition-colors flex items-center gap-2"
        >
          <Icon name={item.icon} class="w-5 h-5" />
          {item.label}
        </a>
      ))}
    </div>
  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById('mobileMenuButton');
  const mobileMenu = document.getElementById('mobileMenu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>