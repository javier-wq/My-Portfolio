---
import { Icon } from "astro-icon/components";

const certifications = [
  {
    title: 'Frontend Developer Practical Course',
    image: 'https://ik.imagekit.io/0vmz5iv95b/curso-front.png',
    date: '2022',
    certification: 'https://drive.google.com/file/d/1SpwSXNA3QzfcfE3ETMfX2FlgMPLrVvr2/view?usp=sharing',
    icon:'computer'
  },
  {
    title: 'Git and Github professional course',
    image: 'https://ik.imagekit.io/0vmz5iv95b/git.png',
    date: '2022',
    certification: 'https://drive.google.com/file/d/1DbxIgtXnZTpxhr2SR6qkUVzaqBMb0XXk/view?usp=sharing',
    icon:'github'
  },
  {
    title: 'Docker: Fundamentals',
    image: 'https://ik.imagekit.io/0vmz5iv95b/docker-fundamentos.png',
    date: '2024',
    certification: 'https://drive.google.com/file/d/1EH2awctNCKeY9eHWlR7rbMVEc0ZitEQR/view?usp=sharing',
    icon:'docker-white'
  }
];
---
<section id="certifications" class="py-20 bg-gray-900">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-white mb-12 text-center flex items-center justify-center gap-3">
      <Icon name="certificate" class="w-10 h-10" />
      Certifications
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {certifications.map(cert => (
        <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:transform hover:scale-105 transition-transform duration-300">
          <div class="relative">
            <img 
              src={cert.image} 
              alt={cert.title}
              class="w-full h-48 object-cover"
            />
            <div class="absolute top-4 right-4 bg-gray-900/80 p-2 rounded-full">
              <Icon name={cert.icon} class="w-6 h-6 text-white" />
            </div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-white mb-2">{cert.title}</h3>
            <p class="text-gray-400 flex items-center gap-2">
              <Icon name="calendar" class="w-5 h-5" />
              {cert.date}
            </p>
            <a 
            href={cert.certification}
            target="_blank"
            class="inline-block bg-blue-600 text-white mt-3 px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
            >
              View Certification
            </a>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center mt-12">
      <a 
        href="/certifications" 
        class="inline-flex items-center gap-2 bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
      >
        <Icon name="arrow-right" class="w-5 h-5" />
        See More Certifications
      </a>
    </div>
  </div>
</section>