---
import Layout from '../layouts/Layout.astro';
import { Icon } from "astro-icon/components";

const allProjects = [
  {
    title: 'E-commerce Platform',
    description: 'A full-stack e-commerce solution built with React and Node.js',
    image: 'https://placehold.co/600x400',
    technologies: ['React', 'Node.js', 'MongoDB'],
    liveUrl: '#',
    githubUrl: '#',
    icon: 'cart'
  },
  {
    title: 'Task Management App',
    description: 'A collaborative task management tool with real-time updates',
    image: 'https://placehold.co/600x400',
    technologies: ['Vue.js', 'Firebase', 'Tailwind'],
    liveUrl: '#',
    githubUrl: '#',
    icon: 'checkbox-marked-circle-outline'
  },
  {
    title: 'Weather Dashboard',
    description: 'Real-time weather tracking application with detailed forecasts',
    image: 'https://placehold.co/600x400',
    technologies: ['JavaScript', 'Weather API', 'Chart.js'],
    liveUrl: '#',
    githubUrl: '#',
    icon: 'checkbox-marked-circle-outline'
  },
  {
    title: 'Social Media Analytics',
    description: 'Analytics dashboard for social media performance tracking',
    image: 'https://placehold.co/600x400',
    technologies: ['React', 'D3.js', 'Firebase'],
    liveUrl: '#',
    githubUrl: '#',
    icon: 'checkbox-marked-circle-outline'
  },
  {
    title: 'Fitness Tracker',
    description: 'Mobile-first fitness tracking application',
    image: 'https://placehold.co/600x400',
    technologies: ['React Native', 'Redux', 'Node.js'],
    liveUrl: '#',
    githubUrl: '#',
    icon: 'checkbox-marked-circle-outline'
  },
  {
    title: 'Recipe Finder',
    description: 'AI-powered recipe recommendation system',
    image: 'https://placehold.co/600x400',
    technologies: ['Python', 'TensorFlow', 'Flask'],
    liveUrl: '#',
    githubUrl: '#',
    icon: 'checkbox-marked-circle-outline'
  }
];
---

<Layout title="All Projects">
  <main class="py-20">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold text-white mb-12 text-center flex items-center justify-center gap-3">
        <Icon name="folder-multiple" class="w-10 h-10" />
        All Projects
      </h1>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {allProjects.map(project => (
          <div class="bg-gray-700 rounded-lg overflow-hidden shadow-lg">
            <div class="relative">
              <img 
                src={project.image} 
                alt={project.title}
                class="w-full h-48 object-cover"
              />
              <div class="absolute top-4 right-4 bg-gray-900/80 p-2 rounded-full">
                <Icon name={project.icon} class="w-6 h-6 text-white" />
              </div>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-white mb-2">{project.title}</h3>
              <p class="text-gray-300 mb-4">{project.description}</p>
              <div class="flex flex-wrap gap-2 mb-4">
                {project.technologies.map(tech => (
                  <span class="px-3 py-1 bg-gray-600 text-sm text-gray-200 rounded-full flex items-center gap-1">
                    <Icon name="code-tags" class="w-4 h-4" />
                    {tech}
                  </span>
                ))}
              </div>
              <div class="flex gap-4">
                <a 
                  href={project.liveUrl}
                  class="inline-flex items-center gap-2 bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-semibold hover:bg-blue-700 transition-colors"
                >
                  <Icon name="rocket-launch" class="w-4 h-4" />
                  Live Demo
                </a>
                <a 
                  href={project.githubUrl}
                  class="inline-flex items-center gap-2 bg-gray-600 text-white px-4 py-2 rounded-lg text-sm font-semibold hover:bg-gray-500 transition-colors"
                >
                  <Icon name="github" class="w-4 h-4" />
                  GitHub
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </main>
</Layout>